<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="left|fill_vertical"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:text="cos tam"
        android:textColor="@color/background_material_dark"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:textStyle="bold"
        android:gravity="left|fill_vertical"
        />

    <TableLayout
        android:id="@+id/tlSettingsTableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEnableText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Enable command"
                    android:gravity="center"
                    android:textColor="@color/background_material_dark"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar" />


                <ImageButton
                    android:id="@+id/ibSpeakerEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/record"
                    android:padding="5dip" />

                <ImageButton
                    android:id="@+id/ibListenEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/listen"
                    android:padding="5dip" />

                <ImageButton
                    android:id="@+id/ibRemoveEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/remove"
                    android:padding="5dip"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDisableText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="Disable command"
                    android:gravity="center"
                    android:textColor="@color/background_material_dark"
                    android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
                    />


                <ImageButton
                    android:id="@+id/ibSpeakerDisable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/record"
                    android:padding="5dip"
                    />

                <ImageButton
                    android:id="@+id/ibListenDisable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/listen"
                    android:padding="5dip"/>

                <ImageButton
                    android:id="@+id/ibRemoveDisable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/switch_thumb_normal_material_light"
                    android:src="@mipmap/remove"
                    android:padding="5dip"/>

            </LinearLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>